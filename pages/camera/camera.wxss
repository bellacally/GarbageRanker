#btn-shutter {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  bottom: 0.5%;
  transform: translate(-50%, -50%);
}

#focus-frame {
  width: 600rpx;
  height: 600rpx;
  position: absolute;
  left: 50%;
  top: 45%;
  transform: translate(-50%, -50%);
}

.img-garbage {
  width: 20%; 
  margin-top: 40rpx;
  animation: 0.5s slide-bottom;
}

@keyframes slide-bottom {
  0% {
      opacity: 0;
      transform: translateY(100%)
  }

  100% {
      opacity: 1;
      transform: translateY(0)
  }
}