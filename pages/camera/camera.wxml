<view class="container">

<camera device-position="back" flash="off" binderror="error" style="width: 100%; height: 100vh;" wx:if="{{cameraOn}}">
  <cover-view bindtap="shutterClicked">拍照</cover-view>
  <cover-view>
    <cover-image src='/images/frame.png' id='focus-frame'></cover-image>
  </cover-view>
  <cover-view>
    <cover-image src='/images/shutter.png' id='btn-shutter'  bindtap="shutterClicked"></cover-image>
  </cover-view>
</camera>

<image src="{{imgUrl}}" mode="widthFix" style="width: 70%; margin: 0 auto;" wx:if="{{imgUrl && !cameraOn}}" class='img-garbage'></image>

</view> 